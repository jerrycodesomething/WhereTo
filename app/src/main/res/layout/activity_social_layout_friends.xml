<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="15dp">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goToWelcomeScreen"
        android:padding="5dp"
        android:src="@drawable/baseline_arrow_back_black_18dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/my_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:background="@drawable/btn_share"
            android:text="My Friends" />

        <Button
            android:id="@+id/add_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:background="@drawable/btn_share"
            android:text="Add Request" />
    </LinearLayout>

    <EditText
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:id="@+id/search_friend"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:hint="Search by username.."
        android:drawableLeft="@drawable/friend"
        android:drawablePadding="5dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:background="@drawable/bg_search_friend" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/friendList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>
</LinearLayout>